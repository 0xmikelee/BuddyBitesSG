<style>
  .accordian {
    width: 100%;
    padding: 0 0.5vw;
    border: 0.1vw solid #0d3e66;
    cursor: pointer;
    border-radius: 5vw;
    display: flex;
    align-items: center;
  }
  .accordian .icon {
    margin: 0 0.2vw 0 0;
    width: 3vw;
    height: 2.1vw;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
    background-image: url(https://cdn.shopify.com/s/files/1/0430/5833/1805/files/plus_1.svg?v=1684522114);
    float: left;
    transition: all 0.5s ease-in;
  }
  .active .icon {
    background-image: url(https://cdn.shopify.com/s/files/1/0430/5833/1805/files/minus.svg?v=1684524159);
  }
  .active {
    background-color: {{ bgColor }};
  }
  .accordian h5 {
    font-size: 1.5vw;
    margin: 0;
    padding: 0.5vw 0;
    font-family: Montserrat, sans-serif !important;
    color: #0d3e66 !important;
    font-weight: 500 !important;
  }
  .faqs {
    background-color: {{ bgColor }};
  }
  .panel {
    background-color: {{ bgColor }};
    padding: 0 2vw;
    border-left: 0.1vw solid #0d3e66;
    margin-left: 3vw;
    text-align: justify;
    overflow: hidden;
    max-height: 0;
    transition: all 0.5s ease-in;
    border-radius: 0;
    box-shadow: none;
  }
  .panel p {
    margin: 1vw 0 !important;
    text-align: left;
  }
  .container-fluid {
    width: 90%;
    margin: 0 auto 4vw auto;
  }
  .container-fluid h2 {
    position: relative;
    font-weight: 400;
    font-stretch: normal;
    font-style: normal;
    line-height: 1;
    letter-spacing: 5px;
    text-align: center;
    color: #203c6c;
    margin: 5vw 0;
    font-size: 5vw;
  }
  .rowa {
    display: flex;
  }
  .columna {
    flex: 50%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 0 1vw;
  }

  @media (max-width: 1024px) {
    .desktop {
      display: none;
    }
    .container-fluid h2 {
      font-size: 7vw !important;
    }
    .container-fluid {
      width: 92%;
    }
    .accordian h5 {
      font-size: 3vw;
    }
    .accordian .icon {
      margin: 0 0.5vw 0 0;
      width: 5vw;
      height: 7vw;
    }
    .accordian {
      border: 0.2vw solid #0d3e66;
    }
    .panel p {
      font-size: 3vw !important;
    }
    .panel {
      border-left: 0.2vw solid #0d3e66;
    }
  }
</style>

<script>
  var acc = document.getElementsByClassName('accordian');
  var i;
  var len = acc.length;
  for (i = 0; i < len; i++) {
    acc[i].addEventListener('click', function () {
      this.classList.toggle('active');
      var panel = this.nextElementSibling;
      if (panel.style.maxHeight) {
        panel.style.maxHeight = null;
      } else {
        panel.style.maxHeight = panel.scrollHeight + 'px';
      }
    });
  }
</script>
