{% style %}
  .swiper-team {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    overflow: hidden;
  }

  .button-next,
  .button-prev {
    position: relative;
  }

  .button-next,
  .button-prev {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .button-next:after {
    content: '';
    display: block;
    width: 20px;
    height: 35px;
    transform: rotate(180deg);
    background-image: url('{{ 'swiper-arrow.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .button-prev:after {
    content: '';
    display: block;
    width: 20px;
    height: 35px;
    background-image: url('{{ 'swiper-arrow.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }
{% endstyle %}

<img
  src="https://buddybites.dog/cdn/shop/t/76/assets/top-wave.png?v=71428714052983619891751530411"
  alt="Section Divider"
  class="block w-full"
>
<section class="relative flex flex-col items-center justify-center gap-5 bg-[#CBE2BA] py-10">
  <h2 class="text-center text-[40px] text-[#193C6B] en:font-heyCharlie sm:text-[60px] lg:text-[80px]">
    {{ 'about_us.section_our_team.title' | t }}
  </h2>
  <div class="container grid grid-cols-[1fr_85%_1fr]">
    <div class="button-prev"></div>
    <div class="swiper-team">
      <div class="swiper-wrapper">
        {% for block in shop.metaobjects.team_members.values %}
          <div class="swiper-slide">
            <div class="flex flex-col items-center justify-center gap-4">
              <img
                src="{{ block.image | image_url: width: 500 }}"
                alt="{{ block.name }}"
                class="h-[250px] w-[200px] rounded-3xl object-cover"
              >
              <p class="text-balance text-center text-[18px] font-light uppercase text-[#193C6B] en:font-museo lg:text-[20px]">
                {{ block.name }}
              </p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="button-next"></div>
  </div>
  <a
    href="https://form.typeform.com/to/tSSrkKwL"
    class="rounded-full border-2 border-[#193C6B] bg-[#193C6B] px-10 py-2 text-center text-[18px] font-light uppercase text-white hover:bg-white hover:text-[#193C6B] en:font-museo lg:text-[20px]"
  >
    {{ 'about_us.section_our_team.join_the_team' | t }}
  </a>
</section>
<img
  src="https://buddybites.dog/cdn/shop/t/76/assets/bottom-wave.png?v=50985264885669557961751530411"
  alt="Section Divider"
  class="block w-full"
>

<script>
  const swiper = new Swiper('.swiper-team', {
    // Optional parameters
    direction: 'horizontal',
    spaceBetween: 10,
    autoplay: {
      delay: 2500,
      disableOnInteraction: false,
    },
    loop: true,
    breakpoints: {
      320: {
        slidesPerView: 1,
      },
      768: {
        slidesPerView: 4,
      },
      1024: {
        slidesPerView: 6,
      },
    },
    navigation: {
      nextEl: '.button-next',
      prevEl: '.button-prev',
    },
  });
</script>

{% schema %}
{
  "name": "Section About Us Team",
  "settings": [],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Picture"
        }
      ]
    }
  ]
}
{% endschema %}
