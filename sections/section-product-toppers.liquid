{% style %}
  .swiper-product,
  .swiper-vets {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
  }

  .swiper-button-next,
  .swiper-button-prev,
  .swiper-button-next-vets,
  .swiper-button-prev-vets {
    position: absolute !important;
    top: 0 !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    height: 100% !important;
    z-index: 10 !important;
  }

  .swiper-button-next,
  .swiper-button-next-vets {
    right: 10px;
  }

  .swiper-button-prev,
  .swiper-button-prev-vets {
    left: 10px;
  }

  .swiper-button-next:after,
  .swiper-button-next-vets:after {
    content: '';
    display: block;
    width: 15px;
    height: 25px;
    transform: rotate(180deg);
    background-image: url('{{ 'swiper-arrow-blue.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .swiper-button-prev:after,
  .swiper-button-prev-vets:after {
    content: '';
    display: block;
    width: 15px;
    height: 25px;
    background-image: url('{{ 'swiper-arrow-blue.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .swiper-navigation-icon {
    display: none;
  }
{% endstyle %}

