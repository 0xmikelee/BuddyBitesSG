{%- style -%}
  .map-block {
    padding: 3vw 10%;
  }
{%- endstyle -%}

<header class="relative">
  <img
    src="{{ 'Untitled_Artwork_16.png' | file_img_url: 'master' }}"
    alt="FAQ Banner"
    class="hidden w-full lg:block"
  >
  <img
    src="{{ 'Untitled_Artwork_17_c68ff179-29a8-4eb6-8d48-e147908eff81.png' | file_img_url: 'master' }}"
    alt="FAQ Banner"
    class="block w-full lg:hidden"
  >
  <div class="container absolute left-1/2 top-[5%] flex -translate-x-1/2 flex-col items-center justify-start gap-4 lg:left-[15%] lg:top-1/2 lg:-translate-y-1/2 lg:translate-x-0 lg:items-start">
    <h1 class="text-[50px] text-[#193C6B] en:font-heyCharlie sm:text-[80px] lg:text-[100px]">
      {{ 'store_locator.title' | t }}
    </h1>
    <p class="max-w-[350px] text-start text-[14px] text-[#193C6B] en:font-museo lg:text-[16px]">
      {{ 'store_locator.subtext' | t }}
    </p>
    <a
      href="{{ pages['subscription-landing'].url }}"
      class="rounded-full border border-[#193C6B] bg-[#193C6B] px-4 py-2 text-[14px] uppercase text-white hover:bg-white hover:text-[#193C6B] en:font-museo lg:text-[16px]"
    >
      {{- 'store_locator.subscribe' | t -}}
    </a>
  </div>
</header>

<section class="relative">
  <div class="map-block">
    <!-- Start Stockist.co widget -->
    <div data-stockist-widget-tag="u19303">
      Loading store locator from <a href="https://stockist.co">Stockist store locator</a>...
    </div>
    <script>
      (function (s, t, o, c, k) {
        c = s.createElement(t);
        c.src = o;
        c.async = 1;
        k = s.getElementsByTagName(t)[0];
        k.parentNode.insertBefore(c, k);
      })(document, 'script', '//stockist.co/embed/v1/widget.min.js');
    </script>
    <!-- End Stockist.co widget -->
  </div>
  <p class="text-center text-[14px] text-[#193C6B] en:font-museo lg:text-[16px]">
    {{ 'store_locator.stockist' | t }}
    <a href="mailto:info@buddybites.sg" class="font-bold underline">{{ 'store_locator.email' | t }}</a>
  </p>
</section>

{% schema %}
{
  "name": "Store Locator",
  "settings": []
}
{% endschema %}
