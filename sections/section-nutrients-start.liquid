<header class="relative">
  <img
    src="{{ 'nutrition_top.png' | file_img_url: 'master' }}"
    alt="Nutrients Header"
    class="relative hidden w-full object-cover lg:block"
  >
  <img
    src="{{ 'nutrition_top_mob.png' | file_img_url: 'master' }}"
    alt="Nutrients Header"
    class="relative block w-full object-cover lg:hidden"
  >
  <div class="container absolute left-1/2 top-0 z-10 flex h-[40%] w-auto -translate-x-1/2 flex-col items-center justify-center lg:left-[20%] lg:h-full lg:translate-x-0">
    <h1 class="text-center text-[50px] text-white en:font-heyCharlie sm:text-[60px] lg:text-[80px]">
      {{ 'nutrition.title' | t }}
    </h1>
  </div>
</header>
<section class="container py-10">
  <div class="flex flex-col items-center justify-center gap-5">
    <h2 class="text-center text-[30px] font-bold uppercase tracking-widest text-[#193C6B] en:font-heyCharlie lg:text-[50px]">
      {{ 'nutrition.premium_ingredients' | t }}
    </h2>
    <div class="flex flex-wrap items-center justify-center gap-4 px-5">
      {% for ingredient in shop.metaobjects.premium_ingredients.values %}
        <div class="group relative flex aspect-square w-[45%] flex-col items-center justify-between gap-2 overflow-hidden rounded-3xl bg-[#c7e3f5] p-4 md:w-[23%] lg:w-[18%]">
          <div class="flex h-full flex-col items-center justify-center">
            <img
              src="{{ ingredient.image | image_url: width: 150 }}"
              alt="{{ ingredient.name }}"
              class="w-[90px] object-cover md:w-[150px]"
            >
          </div>
          <p class="font-monserrat text-center text-[14px] font-bold uppercase text-[#193C6B] lg:text-[16px]">
            {{ ingredient.name }}
          </p>
          <div class="absolute inset-0 hidden flex-col items-center justify-center bg-[#193C63] p-4 group-hover:flex">
            <p class="font-monserrat text-center text-[14px] font-bold uppercase text-white lg:text-[16px]">
              {{ ingredient.content }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<img
  src="https://buddybites.dog/cdn/shop/t/76/assets/ben-top-wave.png?v=170521601617498746161751530411"
  alt="Section Divider"
  class="w-full object-cover"
>
<section class="relative bg-[#fbf3df] py-10">
  <div class="container flex flex-col items-center justify-center gap-5">
    <h2 class="text-center text-[30px] uppercase tracking-widest text-[#193C6B] en:font-heyCharlie lg:text-[63px]">
      {{ 'nutrition.benefits_of_buddy_bites' | t }}
    </h2>
    <div class="flex flex-wrap items-start justify-center gap-4 px-5">
      {% for benefit in shop.metaobjects.buddybites_benefits.values %}
        <div class="flex h-full w-[47%] items-start justify-start gap-4 lg:w-[23%]">
          <img
            src="{{ benefit.icon | image_url: width: 150 }}"
            alt="{{ benefit.name }}"
            class="aspect-square h-[40px] object-contain md:h-[70px]"
          >
          <div class="flex flex-col items-start justify-between gap-2">
            <h3 class="font-monserrat text-[14px] font-normal uppercase text-[#193C6B] lg:text-[16px]">
              {{ benefit.title }}
            </h3>
            <p class="font-monserrat text-[14px] font-light text-[#193C6B] lg:text-[16px]">
              {{ benefit.description }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<img
  src="https://buddybites.dog/cdn/shop/t/76/assets/ben-top-wave.png?v=170521601617498746161751530411"
  alt="Section Divider"
  class="w-full rotate-180"
>
<section class="relative p-10">
  <div class="container flex flex-col items-center justify-center gap-5">
    <h2 class="text-center text-[30px] uppercase tracking-widest text-[#193C6B] en:font-heyCharlie lg:text-[63px]">
      {{ 'nutrition.kibble_comparison' | t }}
    </h2>
    <div class="rounded-full bg-[#193C6B] px-6 py-2 text-[18px] uppercase tracking-widest text-white en:font-museo lg:text-[20px]">
      {{ 'nutrition.comparison_chart' | t }}
    </div>
    <div class="flex flex-wrap items-start justify-center gap-5">
      {% for kibble in shop.metaobjects.all_kibbles_comparisons.values %}
        <div class="flex w-[47%] flex-col items-center justify-between gap-5 md:w-[31%] lg:w-[18%]">
          <img
            src="{{ kibble.image | image_url: width: 150 }}"
            alt="{{ kibble.name }} Recipe"
            class="w-[100px] object-cover lg:w-[150px]"
          >
          <h3 class="font-monserrat text-center text-[16px] font-bold uppercase text-[#193C6B] lg:text-[18px]">
            {{ kibble.recipe_name }}
            {{ 'nutrition.recipe' | t }}
          </h3>
          <p class="font-monserrat text-center text-[14px] font-light text-[#193C6B] lg:text-[16px]">
            {{ kibble.description }}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Nutrients",
  "settings": [],
  "blocks": []
}
{% endschema %}
