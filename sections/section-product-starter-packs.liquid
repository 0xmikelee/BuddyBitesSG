{% style %}
  .swiper-product,
  .swiper-vets {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
  }

  .swiper-button-next,
  .swiper-button-prev,
  .swiper-button-next-vets,
  .swiper-button-prev-vets {
    position: absolute;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    z-index: 10;
  }

  .swiper-button-next,
  .swiper-button-next-vets {
    right: 10px;
    display: block;
    width: 15px;
    height: 25px;
    transform: rotate(180deg);
    background-image: url('{{ 'swiper-arrow-blue.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .swiper-button-prev,
  .swiper-button-prev-vets {
    left: 10px;
    display: block;
    width: 15px;
    height: 25px;
    background-image: url('{{ 'swiper-arrow-blue.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .swiper-button-next:after,
  .swiper-button-next-vets:after {
    content: '';
    display: none;
  }

  .swiper-button-prev:after,
  .swiper-button-prev-vets:after {
    content: '';
    display: none;
  }

  .swiper-navigation-icon {
    display: none;
  }
{% endstyle %}

