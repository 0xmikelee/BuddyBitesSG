{% style %}
 {% assign num_collections = shop.metafields.custom.key_product_collections.value.count %}

  .selecting-grid {
    display: grid;
    grid-template-columns: repeat(calc(2%{{ num_collections }}), minmax(0, 1fr));
    align-items: start;
    gap: 0.5rem;            /* gap-2 = 0.5rem */
    padding-left: 0.5rem;   /* px-2 = 0.5rem left/right */
    padding-right: 0.5rem;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) { /* md: */
    .selecting-grid {
      padding: 0;
    }
  }

  @media (min-width: 1024px) { /* lg: */
    .selecting-grid {
      grid-template-columns: repeat({{ num_collections }}, 1fr);
      gap: 10px;
    }
  }

