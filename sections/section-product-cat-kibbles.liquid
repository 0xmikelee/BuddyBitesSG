{% comment %} Product Details Page {% endcomment %}
<section class="container relative p-5">
  <div class="grid grid-cols-1 gap-10 lg:grid-cols-2">
    {% comment %} Product Image {% endcomment %}
    <div class="relative h-full">
      <div class="sticky top-0 h-fit w-full overflow-hidden rounded-3xl">
        <div class="swiper-product">
          <div class="swiper-button-prev"></div>
          <div class="swiper-wrapper">
            {% for image in product.media %}
              <div class="swiper-slide">
                <img src="{{ image | img_url: 'master' }}" alt="{{ image.alt }}" class="h-full w-full object-cover">
              </div>
            {% endfor %}
          </div>
          <div class="swiper-button-next"></div>
        </div>
      </div>
    </div>
    {% comment %} Product Details {% endcomment %}
    <div class="flex flex-col gap-2">
      <div class="flex flex-col gap-1">
        {% if product.id != 10233886081339 %}
          <h2 class="m-0 text-[24px] font-bold en:font-museo">
            Buddy Bites {{ 'products.product.adult_cat_kibbles' | t }}
          </h2>
        {% else %}
          <h2 class="m-0 text-[24px] font-bold en:font-museo">
            Buddy Bites {{ 'products.product.kitten_kibbles' | t }}
          </h2>
        {% endif %}
        <h3 class="font-montserrat text-[16px] font-light text-gray-500">
          {{ product.title }}
          {{ 'products.product.flavour' | t }}
        </h3>
      </div>
      <div
        class="klaviyo-star-rating-widget"
        data-id="{{ product.id }}"
        data-product-title="{{ product.title }}"
        data-product-type="{{ product.type }}"
      ></div>

      {% if product.metafields.custom.main_collection.value.id == 495764373819 %}
        <div class="flex flex-col justify-center gap-2">
          <p class="text-[16px] font-bold text-black en:font-museo">{{ 'products.product.choose_flavour' | t }}:</p>
          <div class="flex gap-2">
            {% for prd in collections['cat-kibbles'].products %}
              {% assign metaobj_list = prd.metafields.custom.flavor.value %}

              {% for m_obj in metaobj_list %}
                {% if m_obj.product.value.metafields.custom.main_collection.value.id == 495764373819 %}
                  <a href="{{ prd.url }}">
                    <img
                      src="{{ m_obj.featured_image.value | image_url: width: 100, height: 100  }}"
                      width="100"
                      height="100"
                      class="rounded-xl border-2 border-solid {% if product.title == prd.title %} border-black opacity-100 {% else %} border-[#C3C3C3] opacity-50{% endif %}"
                    >
                    <p class="text-center font-semibold en:font-museo en:text-[16px] zh-TW:text-[14px]">
                      <b>{{ m_obj.name }}</b>
                    </p>
                  </a>
                {% endif %}
              {% endfor %}
            {% endfor %}
          </div>
          {% comment %}
            <div class="flex items-center justify-center gap-1 rounded-lg border-2 border-gray-200 px-2 py-[5px] font-montserrat text-[14px] font-light">
              <p>{{ 'products.product.have_kitten' | t }}</p>
              <a href="{{ all_products['kitten-chicken-dry-cat-food'].url }}" class="font-bold underline">
                {{- 'products.product.have_kitten_link_text' | t -}}
              </a>
            </div>
          {% endcomment %}
        </div>
      {% endif %}

      <div class="prose prose-base marker:text-black prose-ul:list-disc">
        {{ product.description }}
      </div>
      {% render 'snippet-add-to-cart' %}
    </div>
  </div>
</section>

