<script>
  // Accordion logic
  const items = document.querySelectorAll('.accordion-item');
  items.forEach((item) => {
    const btn = item.querySelector('.accordion-title');
    btn.addEventListener('click', () => {
      // Close others
      items.forEach((i) => {
        if (i !== item) i.classList.remove('active');
      });
      // Toggle current
      item.classList.toggle('active');
    });
  });
</script>

